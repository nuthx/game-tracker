generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/core.db"
}

// 用户
model User {
  id            Int          @id @default(autoincrement())
  username      String       @unique
  password      String
  npsso         String       @unique @default("")
  psnId         String       @unique @default("me")
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  gameRecords   PsnRecord[]
}

// PSN游戏记录
model PsnRecord {
  id                Int      @id @default(autoincrement())
  npTitleId         String
  titleName         String
  format            String
  launchPlatform    String
  conceptIconUrl    String
  startAt           DateTime @default(now())
  endAt             DateTime?
  playTime          Int?
  error             Int      @default(0)
  user              User[]
}
